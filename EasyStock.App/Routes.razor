@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization

<Router AppAssembly="@typeof(MauiProgram).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <!-- This is shown when the user is not authorized -->
                <p>You are not authorized to view this page. Please <a href="/login">log in</a>.</p>
            </NotAuthorized>
            <Authorizing>
                <!-- This is shown when the authorization process is still ongoing -->
                <p>Authentication in progress...</p>
            </Authorizing>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <!-- This is shown when no page matches the route -->
        <p>Sorry, there's nothing at this address.</p>
    </NotFound>
</Router>
